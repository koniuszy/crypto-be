{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": ".build",
    "baseUrl": "./",
    "skipLibCheck": true,
  },
  "exclude": ["node_modules", "dist", ".build"],
  "include": ["src", "serverless.ts"],
}
